{
  "name": "The-Cube",
  "version": "1.0.0",
  "description": "Electron app for thecub4.vercel.app",
  "homepage": "https://thecub4.vercel.app",
  "main": "main.js",
  "author": {
    "name": "Cyberghost",
    "email": "chrislumain@yahoo.com"
  },
  "scripts": {
    "start": "electron .",
    "clean": "npm prune --omit=dev && npm dedupe && npx modclean --run",
    "minify": "echo 'minify step placeholder'",
    "dist": "npm run clean && npm run minify && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.6.0",
    "modclean": "^2.0.0"
  },
  "dependencies": {
    "@cliqz/adblocker-electron": "^1.34.0",
    "cross-fetch": "^4.1.0",
    "electron-store": "^10.0.1"
  },
  "build": {
    "appId": "com.cyberghost.execube",
    "productName": "The-Cube",
    "compression": "maximum",
    "asar": true,
    "files": [
      "**/*",
      "!**/*.md",
      "!**/*.map",
      "!**/__tests__/**",
      "!**/node_modules/*/{test,__tests__,tests}/**",
      "!*.log"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": ["**/*"]
      }
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/logo.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "snap"
      ],
      "category": "Utility",
      "icon": "assets/logo.png",
      "maintainer": "Cyberghost <chrislumain@yahoo.com>"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities",
      "icon": "assets/logo.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/logo.ico",
      "uninstallerIcon": "assets/logo.ico"
    },
    "publish": {
      "provider": "github"
    }
  }
}
